    "/user": {
      "delete": {
        "summary": "delete current user",
        "tags": [
          "User"
        ],
        "responses": {
          "204": {
            "description": "no content"
          },
          "422": {
            "description": "unprocessable entity",
            "content": {
              "application/json": {
                "schema": {

        "properties": {
          "status": {
            "type": "string",
            "example": "success"
          },
          "message": {
            "type": "string",
            "example": "Success"
          },
          "data": {
            "type": "object",
            "description": "Payload containing data"
          }
        },
        "required": [
          "status",
          "message",
          "data"
        ]
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "error"
          },
          "message": {
            "type": "string",
            "example": "Error"
          },
          "errors": {
            "type": "array",
            "items": {
              "type": "string",
              "example": "Transaction failed"
            }
          }
        },
        "required": [
          "status",
          "message",
          "errors"
        ]
      }
    },
